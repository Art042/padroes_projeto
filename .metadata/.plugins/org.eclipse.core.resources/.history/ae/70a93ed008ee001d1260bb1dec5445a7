package atividade_3.q_10.model.decorators;

import atividade_3.q_10.model.Pizza;

public class Bacon extends DrinkDecorator {
	
	public Bacon(Pizza drink) {
		super(drink);
	}

	@Override
	public void serve() {
		drink.serve();
		System.out.println("- Adicionando Bacon");
	}

	@Override
	public Double getPrice() {
		return drink.getPrice() + 0.8d;
	}

}
