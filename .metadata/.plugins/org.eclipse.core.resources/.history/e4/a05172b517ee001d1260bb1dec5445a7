package atividade_3.q_5;

import java.util.Date;

public class main {
    public static void main(String[] args) {
        String localeCode = "BR"; // código de localidade informado pelo usuário
        AbstractFactory factory = LocaleFactory.getFactory(localeCode);
        java.text.DateFormat dateFormat = factory.createDateFormat();
        CurrencyFormat currencyFormat = factory.createCurrencyFormat();
        Date date = new Date();
        double value = 1.99;
        System.out.println("Data: " + dateFormat.format(date)); // Data: 30/04/2023 (no formato dd/MM/yyyy)
        System.out.println("Valor: " + currencyFormat.format(value)); // Valor: R$ 1,99 (no formato R$ X,XX)
    }
}
