package atividade_3.q_2;

public class Livro {
    private String nome;
    private int idade;
    private String endereco;
    private String telefone;

    private Livro() {}

    public static Builder builder() {
        return new Builder();
    }

    public String getNome() {
        return nome;
    }

    public int getIdade() {
        return idade;
    }

    public String getEndereco() {
        return endereco;
    }

    public String getTelefone() {
        return telefone;
    }

    public static class Builder {
        private Livro livro;

        public Builder() {
            livro = new Livro();
        }

        public Builder nome(String nome) {
            livro.nome = nome;
            return this;
        }

        public Builder idade(int idade) {
            livro.idade = idade;
            return this;
        }

        public Builder endereco(String endereco) {
            livro.endereco = endereco;
            return this;
        }

        public Builder telefone(String telefone) {
        	livro.telefone = telefone;
            return this;
        }

        public Livro build() {
            return livro;
        }
    }
}
