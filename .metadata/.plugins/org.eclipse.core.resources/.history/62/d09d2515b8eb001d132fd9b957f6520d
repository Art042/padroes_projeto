package atividade_3.q_7;

public class Participant implements Observer {
    private String name;
    private List<Integer> card;
    private int score;

    public Participant(String name, List<Integer> card) {
        this.name = name;
        this.card = card;
        this.score = 0;
    }

    public void update(int number) {
        if (card.contains(number)) {
            score++;
            System.out.println(name + " marcou o número " + number + "! Pontuação: " + score);
            if (score == 15) {
                System.out.println(name + " GANHOU!");
                System.exit(0);
            }
        }
    }
}

