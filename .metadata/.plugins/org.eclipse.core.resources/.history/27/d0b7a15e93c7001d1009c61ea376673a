package atividade_2.q_2;


public class ImageManager {
	public static void main(String[] args) {

//	Rendered rendered = new Rendered();
	
	
	
	}

	public void mostrarImagem() {
		Renderer rendered = new Renderer();
		
		if(rendered instanceof TVRenderer) {
			rendered.setStrategy(new TVRenderer());
		}else if(rendered instanceof LaptopRenderer) { 
			rendered.setStrategy(new LaptopRenderer());
		}else if(rendered instanceof SmartphoneRenderer) { 
			rendered.setStrategy(new SmartphoneRenderer());
		}
		
	}

}
